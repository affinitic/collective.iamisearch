<tal:block tal:define="iamlinks python: view.generate_menu_value_by_taxonomy_level('iam');
                       isearchlinks python: view.generate_menu_value_by_taxonomy_level('isearch')">
  <dl class="actionMenu" id="iamMenu" tal:condition="iamlinks">
    <dt class="actionMenuHeader">
      <a href="some_destination">I am</a>
    </dt>
    <dd class="actionMenuContent" tal:repeat="linkname iamlinks">
      <a href="#" tal:content="linkname"></a>
    </dd>
  </dl>

  <dl class="actionMenu" id="IsearchMenu" tal:condition="isearchlinks">
      <dt class="actionMenuHeader">
        <a href="some_destination">I search</a>
      </dt>

      <dd class="actionMenuContent" tal:repeat="linkname isearchlinks">
        <a href="#" tal:content="linkname"></a>
      </dd>
  </dl>
</tal:block>

<style>
 .actionMenu.activated {
   display: block;
 }

 .actionMenu.deactivated {
   display: none;
 }



</style>

